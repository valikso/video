<link href="http://getbootstrap.com/docs/4.0/examples/cover/cover.css" rel="stylesheet">
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Age</th>
      <th scope="col">Email</th>
      <th scope="col">Address</th>
      <th scope="col">Country</th>
      <th scope="col">Sex</th>

      <th scope="col">Avatar</th>
    </tr>
  </thead>
  <% @users.each do |u| %>
  <tbody>
    <tr>
      <th scope="row"><%= u.id %></th>
      <td><%= u.first_name %></td>
      <td><%= u.last_name%></td>
      <td><%= u.age%></td>
      <td><%= u.email%></td>
      <td><%= u.address%></td>
      <td><%= u.country%></td>
      <td><%= u.sex%></td>

      <td><%= image_tag u.avatar.url(:small) %></td>

        <td><%= link_to 'Show', u %></td>
        <% if current_user.admin? && !current_user?(@user) %>
        <td><%= link_to 'Edit', edit_user_path(u) %></td>
        <td><%= link_to 'Destroy', u, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
  <% end %>
  <%end%>
</table>
