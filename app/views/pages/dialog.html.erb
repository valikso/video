<div class="ui segment">
  <h3>Dialogues</h3>

  <div class="ui list">
    <div class="item">
      <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
          <% if conversation.sender_id == current_user.id %>
          <li <% recipient = User.find(conversation.recipient_id) %>   </li>
            <%=image_tag recipient.avatar.url(:small)%>

          <% else %>
          <li     <% recipient = User.find(conversation.sender_id) %></li>
            <%=image_tag recipient.avatar.url(:small)%>
          <% end %>
          <%= link_to recipient.first_name, conversation_messages_path(conversation)%>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
