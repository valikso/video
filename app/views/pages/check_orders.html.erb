<div class="container">

  <% @orders.each do |order| %>
  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Назва:<%= order.name_of_film %></h4>
          <p class="card-text">Опис:<%=order.description %></p>
          <p class="card-text">Замовлення від:<%=order.user.email %></p>
          <p class="card-text">
            Створений :<%=order.created_at  %></p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    </div>
  </div>
  <% end %>
